<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="?attr/cardStyle"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="@drawable/selectable_item_background"
    android:padding="10dp"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/laf_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="@dimen/cardview_spacing"
            android:layout_marginLeft="@dimen/cardview_spacing"
            android:text="@string/vrr_dir_header"
            android:textSize="@dimen/textSmallTitle" />

        <TextView
            android:id="@+id/laf_registerdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="@dimen/cardview_spacing"
            android:layout_marginLeft="@dimen/cardview_spacing"
            android:text="Test"
            android:textSize="@dimen/textDefault" />


    </LinearLayout>

</android.support.v7.widget.CardView>