<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/defaultPadding"
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/boosters_text"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defaultPadding"
            style="?attr/cardStyle">

            <de.mytfg.apps.mytfg.tools.ViewFlipperIndicator
                android:layout_width="match_parent"
                android:elevation="2dp"
                android:paddingBottom="25dp"
                android:paddingTop="@dimen/defaultPadding"
                android:paddingLeft="@dimen/defaultPadding"
                android:paddingRight="@dimen/defaultPadding"
                android:id="@+id/boosters_flipper"
                android:measureAllChildren="true"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/boosters_slide_1"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/boosters_slide_2"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/boosters_slide_3"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/boosters_slide_4"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/boosters_slide_5"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/boosters_slide_6"/>


            </de.mytfg.apps.mytfg.tools.ViewFlipperIndicator>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defaultPadding"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            style="?attr/cardStyle"
            app:contentPadding="10dp"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/boosters_address">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_background_blue"
                    >

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_gravity="start"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_icon_address_white"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/boosters_address"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/boosters_address_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_open_link"
                    android:tint="@color/colorBlack"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            style="?attr/cardStyle"
            android:clickable="true"
            app:contentPadding="10dp"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/parents_web">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_background_red">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_gravity="start"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_web_white"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/boosters_web"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/boosters_web_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerInside"
                    android:tint="@color/colorBlack"
                    android:src="@drawable/ic_action_open_link"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            style="?attr/cardStyle"
            android:clickable="true"
            android:padding="@dimen/cardview_spacing"
            app:contentPadding="10dp"
            android:id="@+id/boosters_mail">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_background_green">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_gravity="start"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_mail_white"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/boosters_mail"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/boosters_mail_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorBlack"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_open_link"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            app:contentPadding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            style="?attr/cardStyle"
            android:clickable="true"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/boosters_pdf">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_background_orange">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_gravity="start"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_download_white"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/boosters_dl"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/boosters_dl_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorBlack"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_open_link"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>