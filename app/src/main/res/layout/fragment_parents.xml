<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/defaultPadding"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/parents_info_text"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/foundation_header"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/defaultPadding"
            android:layout_marginBottom="@dimen/cardview_spacing"
            style="?attr/cardStyle"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/cardview_spacing"
            app:contentPadding="10dp"
            android:id="@+id/parents_address">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_background_blue">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_gravity="start"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_icon_address_white"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_address"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/office_address_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_open_link"
                    android:tint="@color/colorBlack"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            style="?attr/cardStyle"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:contentPadding="10dp"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/parents_web">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_background_red">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_gravity="start"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_web_white"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/parents_web"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/parents_web_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerInside"
                    android:tint="@color/colorBlack"
                    android:src="@drawable/ic_action_open_link"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            style="?attr/cardStyle"
            app:contentPadding="10dp"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/parents_mail">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/circle_background_green">

                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_width="40dp"
                        android:layout_gravity="start"
                        android:layout_height="40dp"
                        android:scaleType="fitEnd"
                        android:src="@drawable/ic_mail_white"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_mail"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/parents_mail_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorBlack"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_open_link"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>