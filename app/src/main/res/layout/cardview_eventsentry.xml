<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="@dimen/textDefault"
                android:id="@+id/event_dayname" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="@dimen/textDate"
                android:id="@+id/event_day" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="@dimen/textDefault"
                android:id="@+id/event_month" />

            <TextView
                android:layout_width="100dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/textDefault"
                android:id="@+id/event_year" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="start"
                android:textSize="18sp"
                android:layout_marginBottom="@dimen/defaultPadding"
                android:id="@+id/event_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_gravity="start"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/defaultPadding"
                android:id="@+id/event_location" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>