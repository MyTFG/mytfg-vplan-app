<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorIcons"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/defaultPadding"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/montabon"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/brockerhoff"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/office_address">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryLight"
                android:padding="@dimen/cardview_spacing">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="start"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitEnd"
                    android:tint="@color/colorBlack"
                    android:src="@drawable/ic_icon_address"
                    android:layout_marginRight="@dimen/cardview_default_radius" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_address"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/office_address_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_open_link"
                    android:tint="@color/colorBlack"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/office_phone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryLight"
                android:padding="@dimen/cardview_spacing">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="start"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_icon_phone"
                    android:tint="@color/colorBlack"
                    android:layout_marginRight="@dimen/cardview_default_radius" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_phone"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/office_phone_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerInside"
                    android:tint="@color/colorBlack"
                    android:src="@drawable/ic_action_open_link"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/office_fax">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimaryLight"
                android:padding="@dimen/cardview_spacing">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="start"
                    android:layout_height="60dp"
                    android:tint="@color/colorBlack"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_icon_fax"
                    android:layout_marginRight="@dimen/cardview_default_radius" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_fax"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/office_fax_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/office_mail">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="start"
                    android:layout_height="60dp"
                    android:tint="@color/colorBlack"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_icon_mail"
                    android:layout_marginRight="@dimen/cardview_default_radius" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_mail"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/office_mail_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:tint="@color/colorBlack"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_action_open_link"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/cardview_spacing"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/cardview_spacing"
            android:id="@+id/office_open">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryLight"
                android:orientation="horizontal"
                android:padding="@dimen/cardview_spacing">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_gravity="start"
                    android:layout_height="60dp"
                    android:layout_marginEnd="20dp"
                    android:tint="@color/colorBlack"
                    android:scaleType="fitEnd"
                    android:src="@drawable/ic_icon_open"
                    android:layout_marginRight="@dimen/cardview_default_radius" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/office_open"
                        android:layout_marginBottom="2dp"
                        android:textSize="@dimen/textSmallTitle"/>

                    <TextView
                        android:layout_marginStart="@dimen/defaultPadding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textDefault"
                        android:text="@string/office_open_val"
                        android:layout_marginLeft="@dimen/defaultPadding" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>