<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plan_empty"
        android:padding="@dimen/defaultPadding"
        android:id="@+id/exam_empty"
        android:textSize="22sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/exam_layout"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="@dimen/textDefault"
                android:id="@+id/exam_dayname" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="@dimen/textDate"
                android:id="@+id/exam_day" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="@dimen/textDefault"
                android:id="@+id/exam_month" />

            <TextView
                android:layout_width="100dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/textDefault"
                android:id="@+id/exam_year" />

            <TextView
                android:layout_width="100dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cardview_spacing"
                android:layout_marginEnd="@dimen/cardview_spacing"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:id="@+id/exam_block" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="vertical"
                android:padding="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/cardview_light_background"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/exam_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/defaultPadding"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/exam_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/defaultPadding"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/exam_teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/defaultPadding"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/exam_lessons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/defaultPadding"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="22sp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_exam_cancel_orange"
                        android:id="@+id/exam_crossed"
                        android:visibility="gone"
                        android:scaleType="fitStart"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/exam_rescheduled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/exam_rescheduled"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/accent"
                    android:textSize="20sp" />

            </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>